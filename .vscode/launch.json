{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Node",
      "type": "node",
      "cwd": "${fileDirname}",
      "program": "${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--opt=markdown/haddock",
        "readme"
      ]
    },
    {
      "name": "Debug Bun",
      "type": "bun",
      "runtime": "bun",
      "request": "launch",
      "watchMode": false,
      "stopOnEntry": true,
      "cwd": "${fileDirname}",
      "program": "${file}",
      "args": [
        "--opt=markdown/haddock",
        "readme"
      ]
    },
    {
      "name": "Dart",
      "type": "dart",
      "request": "launch",
      "cwd": "${fileDirname}",
      "program": "${file}"
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (Launch currently open script)",
      "cwd": "${fileDirname}",
      "program": "${file}",
      "args": [
        "sek15"
      ]
    },
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 0,
      "runtimeArgs": [
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug,develop",
        "XDEBUG_CONFIG": "client_port=${port}"
      }
    },
    {
      "name": "Launch Built-in web server",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes",
        "-S",
        "localhost:0"
      ],
      "program": "",
      "cwd": "${workspaceRoot}",
      "port": 9003,
      "serverReadyAction": {
        "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
